{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "functions/**",
            "admin-scripts/**",
            "*.md",
            "LICENSE"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "SAMEORIGIN"
                    },
                    {
                        "key": "X-XSS-Protection",
                        "value": "1; mode=block"
                    },
                    {
                        "key": "Referrer-Policy",
                        "value": "strict-origin-when-cross-origin"
                    },
                    {
                        "key": "Permissions-Policy",
                        "value": "geolocation=(), microphone=(), camera=()"
                    },
                    {
                        "key": "Content-Security-Policy",
                        "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.gstatic.com https://apis.google.com https://www.google.com https://www.gstatic.com/recaptcha/ https://www.google.com/recaptcha/ https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://*.firebaseio.com https://*.googleapis.com https://*.firebasedatabase.app https://www.googletagmanager.com https://plausible.io https://t.contentsquare.net https://*.contentsquare.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: blob: https:; connect-src 'self' https://*.firebaseio.com https://*.googleapis.com https://*.firebasedatabase.app wss://*.firebaseio.com wss://*.firebasedatabase.app https://api.web3forms.com https://www.paypal.com https://www.google-analytics.com https://*.google-analytics.com https://*.analytics.google.com https://www.googletagmanager.com https://plausible.io https://*.contentsquare.net; frame-src https://www.google.com https://www.paypal.com https://camisetazo-puntos.firebaseapp.com; object-src 'none'; base-uri 'self';"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|webp|svg|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/tienda",
                "destination": "/pages/tienda.html"
            },
            {
                "source": "/catalogo",
                "destination": "/pages/catalogo.html"
            },
            {
                "source": "/retro",
                "destination": "/pages/tienda.html?category=retro"
            },
            {
                "source": "/sobre-nosotros",
                "destination": "/pages/quienes-somos.html"
            },
            {
                "source": "/contacto",
                "destination": "/pages/contacto.html"
            },
            {
                "source": "/carrito",
                "destination": "/pages/carrito.html"
            },
            {
                "source": "/pago",
                "destination": "/pages/checkout.html"
            },
            {
                "source": "/mi-cuenta",
                "destination": "/pages/perfil.html"
            },
            {
                "source": "/iniciar-sesion",
                "destination": "/pages/login.html"
            },
            {
                "source": "/soporte",
                "destination": "/pages/soporte.html"
            },
            {
                "source": "/privacidad",
                "destination": "/pages/privacidad.html"
            },
            {
                "source": "/cookies",
                "destination": "/pages/cookies.html"
            },
            {
                "source": "/terminos",
                "destination": "/pages/terminos.html"
            },
            {
                "source": "/seleccion/brasil",
                "destination": "/pages/tienda.html?team=brasil"
            },
            {
                "source": "/seleccion/alemania",
                "destination": "/pages/tienda.html?team=alemania"
            },
            {
                "source": "/seleccion/espana",
                "destination": "/pages/tienda.html?team=espana"
            },
            {
                "source": "/seleccion/argentina",
                "destination": "/pages/tienda.html?team=argentina"
            },
            {
                "source": "/seleccion/francia",
                "destination": "/pages/tienda.html?team=francia"
            },
            {
                "source": "/seleccion/italia",
                "destination": "/pages/tienda.html?team=italia"
            },
            {
                "source": "/seleccion/portugal",
                "destination": "/pages/tienda.html?team=portugal"
            },
            {
                "source": "/equipo/real-madrid",
                "destination": "/pages/tienda.html?team=real-madrid"
            },
            {
                "source": "/equipo/barcelona",
                "destination": "/pages/tienda.html?team=barcelona"
            },
            {
                "source": "/equipo/atletico-madrid",
                "destination": "/pages/tienda.html?team=atletico"
            },
            {
                "source": "/equipo/psg",
                "destination": "/pages/tienda.html?team=psg"
            },
            {
                "source": "/equipo/manchester-city",
                "destination": "/pages/tienda.html?team=man-city"
            },
            {
                "source": "/equipo/manchester-united",
                "destination": "/pages/tienda.html?team=man-united"
            },
            {
                "source": "/equipo/bayern-munich",
                "destination": "/pages/tienda.html?team=bayern"
            },
            {
                "source": "/liga/la-liga",
                "destination": "/pages/tienda.html?league=laliga"
            },
            {
                "source": "/liga/bundesliga",
                "destination": "/pages/tienda.html?league=bundesliga"
            },
            {
                "source": "/liga/serie-a",
                "destination": "/pages/tienda.html?league=seriea"
            },
            {
                "source": "/liga/ligue-1",
                "destination": "/pages/tienda.html?league=ligue1"
            },
            {
                "source": "/camiseta/**",
                "destination": "/pages/producto.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs18",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "database": {
        "rules": "database.rules.json"
    }
}